<%- include('../partials/header') %>

<section class="board-container">
  <section>
    <table class="table">
      <h1>DEPARTURES</h1>
      <tr class="board">
        <th>AIRLINE</th>
        <th>AIRPORT</th>
        <th>FLIGHT NO.</th>
        <th>DEPARTURE</th>
        <th></th>
      </tr>

      <% flights.forEach(function(f) { %>
        <tr class="board">
          <td><%= f.airline %></td>
          <td><%= f.airport %></td>
          <td><%= f.flightNo %></td>
          <td><%= f.departs %></td>
        
          <td><a href="/flights/<%= f._id %>">Details</a></td>
        </tr>
      <% }); %>

    </table>
  </section>
</section>

<%- include('../partials/footer') %>