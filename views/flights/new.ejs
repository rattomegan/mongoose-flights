<%- include('../partials/header') %>

<section class="add-form">
  <section>
    <form class="new-form" action="/flights" method="POST">
      <h2>ADD FLIGHT</h2>
      <label>Airline:</label>
      <select name="airline">
        <option value="" selected></option>
        <option value="American">American</option>
        <option value="Southwest">Southwest</option>
        <option value="United">United</option>
      </select><br>
      <label>Airport:</label>
      <select name="airport">
        <option value="AUS">AUS</option>
        <option value="DFW">DFW</option>
        <option value="DEN" selected>DEN</option>
        <option value="LAX">LAX</option>
        <option value="SAN">SAN</option>
      </select><br>
      <label>Flight No:</label>
      <input type="number" name="flightNo"><br>
      <label>Departure:</label>
      <input type="datetime-local" value="" name="departs"><br>
      <input class="submit" type="submit" value="Add Flight">
    </form>
  </section>
</section>




<%- include('../partials/footer') %>